<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplikacija.MainPage"
             BackgroundColor="White">

    <ScrollView VerticalScrollBarVisibility="Always">
    <StackLayout Margin="20,120,20,25" >
        <Image Source="logoT.png"  />
        <Entry x:Name="Telefon" Placeholder="Broj telefona" Keyboard="Numeric" ClearButtonVisibility="WhileEditing" PlaceholderColor="#8a8a8a"  FontFamily="Helvetica" TextColor="Black" Margin="0,40,0,0" />
        <Rectangle HorizontalOptions="Fill" Fill="#8a8a8a" HeightRequest="3" Margin="0,-10,0,0"/>
        <Entry x:Name="Sifra" Placeholder="Šifra" IsPassword="True" ClearButtonVisibility="WhileEditing"  PlaceholderColor="#8a8a8a" FontFamily="Helvetica"  TextColor="Black"  />
        <Rectangle HorizontalOptions="Fill" Fill="#8a8a8a" HeightRequest="3" Margin="0,-10,0,150"/>
        <Button Text="Uloguj se" Background="#ffc100" CornerRadius="40" TextColor="White" FontFamily="Helvetica" FontAttributes="Bold" FontSize="19" Clicked="Loguj"/>
        <Button Text="Napravi nalog" Background="#ffc100" CornerRadius="40" TextColor="White" FontFamily="Helvetica" FontAttributes="Bold" FontSize="19" Clicked="Registruj" />

    </StackLayout>
    </ScrollView>
</ContentPage>
